# Development Dockerfile - for running the app in Docker with hot reload
FROM maven:3.9-eclipse-temurin-21

WORKDIR /app

# Copy pom.xml first for dependency caching
COPY pom.xml .

# Download dependencies (this layer will be cached)
RUN mvn dependency:go-offline -B

# Copy source code
COPY src ./src

# Expose port
EXPOSE 8080

# Run the application with Maven (enables hot reload with DevTools)
CMD ["mvn", "spring-boot:run"]

